<%- include('../partials/header'); %>
<div class="main-content mt-5">
  <div class="page-content">
    <div class="">
      <div class="container-fluid">
        <div class="row">
          <!--end col-->
          <div class="col-xxl-12">
            <div class="team-list row list-view-filter">
              <div class="col-lg-12">
                <div class="card m-4">
                  <div class="card-header">
                    <div class="row g-2">
                      <div class="col-md-5 d-flex align-items-center">
                        <p class="fs-16 m-0 fw-semibold text-muted">
                          Lead Details
                          <!-- export-customers -->
                        </p>
                        <!-- <div class="col-sm-auto" style="margin-left: 70vw;">
                                                        <button
                                                            class="btn btn-outline-secondary add-btn">
                                                            <i class="ri-upload-line me-1 align-bottom"></i>
                                                            Update
                                                        </button>
                                                    </div> -->
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card team-box p-5 m-4">
                  <div class="card-body">
                    <div>
                      <p class="fs-16 m-0 fw-semibold text-muted">
                        Information
                      </p>
                      <div class="row m-3">
                        <% if (lead?.loanType) { %>
                        <div class="col-sm-3">
                          <b>Product :</b>
                          <div class="mt-2"><%= lead.loanType %></div>
                        </div>
                        <% } %> <% if (lead.productSelection) { %>
                        <div class="col-sm-3">
                          <b>Category :</b>
                          <div class="mt-2"><%= lead.productSelection %></div>
                        </div>
                        <% } %> <% if (lead.chanelCode) { %>
                        <div class="col-sm-3">
                          <b>Chanel Code :</b>
                          <div class="mt-2"><%= lead.chanelCode %></div>
                        </div>
                        <% } %> <% if (lead.customerName) { %>
                        <div class="col-sm-3">
                          <b>Customer Name :</b>
                          <div class="mt-2"><%= lead.customerName %></div>
                        </div>
                        <% } %> <% if (lead.companyName) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Company Name :</b>
                          <div class="mt-2"><%= lead.companyName %></div>
                        </div>
                        <% } %> <% if (lead.locationPin) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Area Code :</b>
                          <div class="mt-2"><%= lead.locationPin %></div>
                        </div>
                        <% } %> <% if (lead.state) { %>
                        <div class="col-sm-3 mt-3">
                          <b>State :</b>
                          <div class="mt-2"><%= lead.state %></div>
                        </div>
                        <% } %> <% if (lead.city) { %>
                        <div class="col-sm-3 mt-3">
                          <b>City :</b>
                          <div class="mt-2"><%= lead.city %></div>
                        </div>
                        <% } %> <% if (lead.gender) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Gender :</b>
                          <div class="mt-2"><%= lead.gender %></div>
                        </div>
                        <% } %> <% if (lead.dob) { %>
                        <div class="col-sm-3 mt-3">
                          <b>dob :</b>
                          <div class="mt-2"><%= lead.dob.toDateString() %></div>
                        </div>
                        <% } %> <% if (lead.phone) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Phone :</b>
                          <div class="mt-2"><%= lead.phone %></div>
                        </div>
                        <% } %> <% if (lead.netSalary) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Net Salary :</b>
                          <div class="mt-2"><%= lead.netSalary.toLocaleString('en-IN') %></div>
                        </div>
                        <% } %> <% if (lead.preferedLender) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Prefered Lender :</b>
                          <div class="mt-2"><%= lead.preferedLender %></div>
                        </div>
                        <% } %> <% if (lead.cardNameRequired) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Prefered Credit Card :</b>
                          <div class="mt-2"><%= lead.cardNameRequired %></div>
                        </div>
                        <% } %> <% if (lead.entityType) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Entity Type :</b>
                          <div class="mt-2"><%= lead.entityType %></div>
                        </div>
                        <% } %> <% if (lead.employmentType) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Employment Type :</b>
                          <div class="mt-2"><%= lead.employmentType %></div>
                        </div>
                        <% } %> <% if (lead.grossReceipt) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Gross Receipt :</b>
                          <div class="mt-2"><%= lead.grossReceipt %></div>
                        </div>
                        <% } %> <% if (lead.primaryBank) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Primary Bank :</b>
                          <div class="mt-2"><%= lead.primaryBank %></div>
                        </div>
                        <% } %> <% if (lead.profession) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Profession :</b>
                          <div class="mt-2"><%= lead.profession %></div>
                        </div>
                        <% } %> <% if (lead.turnOver) { %>
                        <div class="col-sm-3 mt-3">
                          <b>Turnover :</b>
                          <div class="mt-2"><%= lead.turnOver.toLocaleString('en-IN') %></div>
                        </div>
                        <% } %>
                      </div>
                      <div class="row m-3">
                        <% if (lead.loanRequired) { %>
                        <div class="col-sm-3">
                          <b>Loan Required :</b>
                          <div class="mt-2"><%= lead.loanRequired.toLocaleString('en-IN') %></div>
                        </div>
                        <% } %> <% if (lead.disbursedAmount) { %>
                        <div class="col-sm-3">
                          <b>Disbursed Amount :</b>
                          <div class="mt-2"><%= lead.disbursedAmount.toLocaleString('en-IN') %></div>
                        </div>
                        <% } %>
                        <div class="col-sm-3">
                          <b>Status:</b>
                          <div class="mt-2"><%= lead.status %></div>
                        </div>
                      </div>
                    </div>
                    <div class="mt-3">
                      <p class="fs-16 m-0 fw-semibold text-muted">Documents</p>
                      <div class="row">
                        <% if (lead.aadharCardDocument) { %>
                        <div class="col-sm-3 m-3">
                          <b>Aadhar Card Document :</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.aadharCardDocument %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if (lead.pancardDocument) { %>
                        <div class="col-sm-3 m-3">
                          <b>Pancard Document :</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.pancardDocument %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if (lead.bankStatement) { %>
                        <div class="col-sm-3 m-3">
                          <b>Bank Statement :</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.bankStatement %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if (lead.passportPhoto) { %>
                        <div class="col-sm-3 m-3">
                          <b>Passport Photo :</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.passportPhoto %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if (lead.coApAadharCardDocument){ %>
                        <div class="col-sm-3 m-3">
                          <b>Co-Applicants Aadhaar:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.coApAadharCardDocument %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.coApPancardDocument){ %>
                        <div class="col-sm-3 m-3">
                          <b>Co-Applicants Pancard :</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.coApPancardDocument %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.coApPassportPhoto) { %>
                        <div class="col-sm-3 m-3">
                          <b>Co-Applicants Passport Photo:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.coApPassportPhoto %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.salarySlip){ %>
                        <div class="col-sm-3 m-3">
                          <b>Salary Slip:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.salarySlip %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.addressProof){%>
                        <div class="col-sm-3 m-3">
                          <b>Address Proof:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.addressProof %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.balanceSheetTwoYears) { %>
                        <div class="col-sm-3 m-3">
                          <b>2 Years Balance Sheet:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.balanceSheetTwoYears %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% } %> <% if(lead.ccBankOneYear){ %>
                        <div class="col-sm-3 m-3">
                          <b>1 Year Banking CC:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.ccBankOneYear %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% }%> <% if(lead.coiTwoYears){ %>
                        <div class="col-sm-3 m-3">
                          <b>2 Years Baking COI:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.coiTwoYears %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% }%> <% if(lead.currentBankOneYear){ %>
                        <div class="col-sm-3 m-3">
                          <b>Current Banking One Year:</b>
                          <div class="mt-2">
                            <a
                              href="/uploads/<%= lead.currentBankOneYear %>"
                              target="_blank"
                            >
                              View
                            </a>
                          </div>
                        </div>
                        <% }%>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!--end add modal-->
            <!--end card-->
          </div>
          <!--end col-->
        </div>
      </div>
      <!--end modal-->
    </div>
    <!-- container-fluid -->
  </div>
  <!-- End Page-content -->
</div>
<%- include('../partials/footer') %>
