<%- include('./partials/header') %>

<section class="pt-3 pb-3 mt-80 account-create-area breadcrumb mb-0">
  <div class="container">
    <div class="row">
      <div class="account-create-content text-left">
        <h2 class="mx-0">3 Cards</h2>
        <p class="mt-1">Available for you</p>
      </div>
    </div>
  </div>
</section>

<section class="ptb-70 bg-f6f4f8 card_product_wrap">
  <div class="container container_auto">
    <div class="row">
      <h5 class="mb-3">
        <img src="/customer-assets/img/tag-1.png" style="width: 20px" /> Compare
      </h5>
      <div class="card product px-0 mb-3">
        <div class="card-body px-0 pt-0 pb-0">
          <table class="table mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 20%">
                  <div class="c-wrapper">
                    <div>
                      <p></p>
                    </div>
                  </div>
                </th>
                <% cards.forEach(card => { %>
                <th>
                  <div class="c-wrapper">
                    <div class="text-center">
                      <img <% if(card.icon !== null) { %> src="/uploads/<%=
                      card.icon %>" <% } else { %>
                      src="/customer-assets/img/credit-card-img.jpg" <% } %>
                      style="width: 30px; margin-bottom: 5px" />
                      <p><b><%= card.name %></b></p>
                    </div>
                  </div>
                </th>
                <% }) %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <div class="c-wrapper">
                    <div>
                      <p>Miles</p>
                    </div>
                  </div>
                </td>
                <% cards.forEach(card => { %>
                <td>
                  <div class="c-wrapper">
                    <div style="text-align: center">
                      <p><%= card.miles %></p>
                    </div>
                  </div>
                </td>
                <% }) %>
              </tr>
              <tr>
                <td>
                  <div class="c-wrapper">
                    <div>
                      <p>Points</p>
                    </div>
                  </div>
                </td>
                <% cards.forEach(card => { %>
                <td>
                  <div class="c-wrapper">
                    <div style="text-align: center">
                      <p><%= card.points %></p>
                    </div>
                  </div>
                </td>
                <% }) %>
              </tr>
              <tr>
                <td>
                  <div class="c-wrapper">
                    <div>
                      <p>Lounges Access</p>
                    </div>
                  </div>
                </td>
                <% cards.forEach(card => { %>
                <td>
                  <div class="c-wrapper">
                    <div style="text-align: center">
                      <p><%= card.loungeAccess %></p>
                    </div>
                  </div>
                </td>
                <% }) %>
              </tr>
              <tr>
                <td>
                  <div class="c-wrapper">
                    <div>
                      <p></p>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
