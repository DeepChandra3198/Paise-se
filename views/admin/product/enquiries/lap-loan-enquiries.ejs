<%- include('../../partials/header'); %>
<div class="main-content">
  <div class="page-content">
    <div class="">
      <!-- start page title -->
      <div class="row">
        <div class="col-12">
          <div
            class="page-title-box d-sm-flex align-items-center justify-content-between"
            style="
              padding: 10px 1.5rem;
              background-color: var(--vz-card-bg) !important;
              -webkit-box-shadow: 0 1px 2px rgb(56 65 74 / 15%);
              box-shadow: 0 1px 2px rgb(56 65 74 / 15%);
              border-bottom: 1px solid none;
              border-top: 1px solid none;
              margin: -23px -1.5rem 1.5rem -1.5rem;
            "
          >
            <h4 class="mb-sm-0" style="margin-left: 106px">LAP Loan Enquiries</h4>
          </div>
        </div>
      </div>
      <!-- end page title -->
      <div class="container-fluid">
        <div class="team-list row list-view-filter">
          <div class="col-lg-12">
            <div class="card team-box">
              <div class="card-body">
                <div>
                  <div class="table-responsive table-card">
                    <table class="table align-middle fs-13" id="customerTable">
                      <thead class="table-secondary">
                        <tr>
                          <th width="5%">SR NO.</th>
                          <th width="15%">PRODUCT</th>
                          <th width="30%">CUSTOMER ENQUIRY</th>
                          <th width="10%">DATE/TIME</th>
                        </tr>
                      </thead>
                      <tbody class="list form-check-all">
                        <% queries.forEach((query, index) => { %>
                        <tr>
                          <td>
                            <p class="text-muted mb-0"><%= ++index %></p>
                          </td>
                          <td>
                            <div class="team-content">
                              <p class="text-muted mb-0">
                                <span class="">Name:</span> <%=
                                query.Product?.name %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Short Desc: </span> <%=
                                query.Product?.shortDescription %>
                              </p>
                            </div>
                          </td>
                          <td>
                            <div class="team-content">
                              <p class="text-muted mb-0">
                                <span class="">Full Name:</span> <%=
                                query.name %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Email:</span> <%=
                                query.email %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Date of Birth:</span> <%= new Date(query.dob).toLocaleString('en-IN').split(',')[0] %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Loan Amount:</span> <%=
                                query.loanAmount %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Annual Turnover:</span> <%=
                                query.annualTurnover %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">City of Residence:</span>
                                <%= query.city %>
                              </p>
                               <p class="text-muted mb-0">
                                <span class="">Company Type:</span> <%=
                                query.companyType %>
                              </p>
                               <p class="text-muted mb-0">
                                <span class="">Current Business Years:</span> <%=
                                query.currentBusinessYears %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Primary Bank Account:</span> <%=
                                query.bankAccount %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Pancard:</span> <%=
                                query.pancard %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Property Type:</span> <%=
                                query.propertyType %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Tentative Purchase Month:</span> <%=
                                query.tentativePurchaseMonth %>
                              </p>
                              <p class="text-muted mb-0">
                                <span class="">Employment Type:</span> <%=
                                query.employment %>
                              </p>
                            </div>
                          </td>
                          <td>
                            <p class="text-muted mb-0 format-date">
                              <%= query.createdAt %>
                            </p>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
                <%- include('../../../components/admin/partials/pagination'); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- container-fluid -->
  </div>
  <!-- End Page-content -->
</div>
<%- include('../../partials/footer'); %>
