<%- include('../partials/header'); %>
  <div class="main-content">
    <div class="page-content">
      <div class="">
        <div class="container-fluid">
          <div class="row">
            <!--end col-->
            <div class="col-xxl-12">
              <div class="team-list row list-view-filter">
                <div class="col-lg-12">
                  <div class="card team-box">
                    <div class="card-header">
                      <div class="row g-2">
                        <div class="col-md-5 d-flex align-items-center">
                          <p class="fs-16 m-0 fw-semibold text-muted">
                            Staffs
                            <!-- export-customers -->
                          </p>
                        </div>
                        <div class="col-sm-auto ms-auto">
                          <div class="flex-grow-1">
                            <button class="btn btn-info add-btn" data-bs-toggle="modal"
                              data-bs-target="#createTeamMemberModal">
                              <i class="ri-add-fill me-1 align-bottom"></i>
                              Add Staff
                            </button>
                          </div>
                        </div>
                        <!-- <form action="/admin/export-customers" class="col-sm-auto ms-auto">
                          <div class="input-group">
                            <span class="input-group-text">Start & End Date </span>
                            <input type="date" class="form-control" name="startDate" />
                            <input type="date" class="form-control" name="endDate" />
                            <button class="btn btn-outline-secondary add-btn">
                              <i class="ri-download-line me-1 align-bottom"></i>
                              Export
                            </button>
                          </div>
                        </form> -->
                      </div>
                    </div>
                  </div>
                  <div class="card team-box">
                    <div class="card-body">
                      <div>
                        <div class="table-responsive">
                          <table class="table align-middle table-nowrap mb-0 fs-13" id="customerTable">
                            <thead class="table-secondary">
                              <tr>
                                <th>SR NO.</th>
                                <th>EMAIL</th>
                                <th>STAFF TYPE</th>
                                <th>PASSWORD</th>
                                <th>CREATED AT</th>
                                <!-- <th style="text-align: center">ACTION</th> -->
                              </tr>
                            </thead>
                            <tbody class="list form-check-all">
                              <% users.forEach((customer, index)=> { %>
                                <tr>
                                  <td>
                                    <p class="text-muted mb-0">
                                      <%= ++index %>
                                    </p>
                                  </td>
                                  <td>
                                    <p class="text-muted mb-0">
                                      <%= customer.email %>
                                    </p>
                                  </td>
                                  <td>
                                    <p class="text-muted mb-0">
                                      <%= customer.staffType %>
                                    </p>
                                  </td>
                                  <td>
                                    <p class="text-muted mb-0">
                                      <%= customer.password %>
                                    </p>
                                  </td>
                                  <!-- <td>
                                    <p class="text-muted mb-0">
                                      <%= customer.phone %>
                                    </p>
                                  </td> -->
                                  <td>
                                    <p class="text-muted mb-0 format-date">
                                      <%= customer.createdAt %>
                                    </p>
                                  </td>
                                  <!-- <td>
                                    <p class="text-muted mb-0 format-date">
                                      <%= customer.updatedAt %>
                                    </p>
                                  </td> -->
                                  <!-- <td>
                                    <% if (customer.updatedAt.getTime()==customer.createdAt.getTime()) { %>
                                      <p class="text-muted mb-0">New</p>
                                      <% } else { %>
                                        <p class="text-muted mb-0">Existing</p>
                                        <% } %>
                                  </td> -->
                                  <!-- <td class="text-center">
                                    <a href="customer/<%= customer.id %>">
                                      <i class="fa fa-eye" data-toggle="tooltip" title="View"
                                        style="width: 20px; height: 20px" role="button">
                                      </i>
                                    </a>
                                  </td> -->
                                </tr>
                                <% }) %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <%- include('../../components/admin/partials/pagination'); %>
                    </div>
                  </div>
                </div>
              </div>
              <!--end add modal-->
              <!--end card-->
            </div>
            <!--end col-->
          </div>
        </div>

        <div class="modal" id="createTeamMemberModal">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
              <div class="modal-header">
                <h6 class="modal-title">Create Staff</h6>
                <button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button"></button>
              </div>
              <form class="checkout-tab create-staff-form">
                <!--end modal-body-->
                <div class="modal-body">
                  <div class="row g-3">
                    <div class="col-lg-12">
                      <div>
                        <label class="form-label">email</label>
                        <input type="text" class="form-control" placeholder="Enter " name="email" maxlength="100" />
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div>
                        <label class="form-label">password</label>
                        <input type="password" class="form-control" placeholder="Enter " name="password"
                          maxlength="100" />
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div>
                        <label for="question" class="form-label">Product Type</label>
                        <select class="form-control" name="loanType" required="true">
                          <% loanType.forEach((item, index)=> { %>
                            <option value="<%= item.name %>">
                              <%= item.name %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                    </div>

                    <!--end col-->
                    <div class="col-lg-12">
                      <div class="d-flex align-items-start gap-3 mt-3">
                        <button type="submit" class="btn btn-primary btn-label right ms-auto nexttab"
                          data-nexttab="pills-bill-address-tab">
                          <i class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"></i>
                          Save
                        </button>
                      </div>
                    </div>
                    <!--end col-->
                  </div>
                </div>
                <!--end modal-body-->
              </form>
            </div>
          </div>
        </div>

        <div class="modal" id="editTeamMemberModal">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
              <div class="modal-header">
                <h6 class="modal-title">Edit Blog</h6>
                <button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button"></button>
              </div>
              <form class="checkout-tab edit-blog-form">
                <!--end modal-body-->
                <div class="modal-body">
                  <div class="row g-3">
                    <div class="col-lg-6">
                      <div>
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control blog-title" placeholder="Enter " name="title"
                          maxlength="100" />
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div>
                        <label class="form-label">Author</label>
                        <input type="text" class="form-control blog-author" placeholder="Enter " name="author"
                          maxlength="100" />
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div>
                        <label class="form-label">Icon</label>
                        <input type="file" class="form-control blog-icon" name="icon" accept=".jpg,.jpeg,.png,.gif" />
                      </div>
                    </div>
                    <!--end col-->
                    <div class="col-lg-6">
                      <div>
                        <label class="form-label">Cover</label>
                        <input type="file" class="form-control blog-cover" name="cover" accept=".jpg,.jpeg,.png,.gif" />
                      </div>
                    </div>

                    <div class="col-lg-12">
                      <div>
                        <label class="form-label">Description</label>
                        <textarea class="form-control edit-desc blog-content" placeholder="Enter "
                          name="content"></textarea>
                      </div>
                    </div>

                    <!--end col-->
                    <div class="col-lg-12">
                      <div class="d-flex align-items-start gap-3 mt-3">
                        <button type="submit" class="btn btn-primary btn-label right ms-auto nexttab"
                          data-nexttab="pills-bill-address-tab">
                          <i class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"></i>
                          Save
                        </button>
                      </div>
                    </div>
                    <!--end col-->
                  </div>
                </div>
                <!--end modal-body-->
              </form>
            </div>
          </div>
        </div>
        <!--end modal-->
      </div>
      <!-- container-fluid -->
    </div>
    <!-- End Page-content -->
  </div>
  <script type="module" src="/javascripts/admin/staff.js"></script>
  <%- include('../partials/footer'); %>