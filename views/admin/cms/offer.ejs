<%- include('../partials/header'); %>
<div class="main-content">
  <div class="page-content">
    <div class="">
      <div class="container-fluid">
        <div class="row">
          <!--end col-->
          <div class="col-xxl-12">
            <div class="team-list row list-view-filter">
              <div class="col-lg-12">
                <div class="card team-box">
                  <div class="card-header">
                    <div class="row g-2">
                      <div class="col-md-5 d-flex align-items-center">
                        <p class="fs-16 m-0 fw-semibold text-muted">OFFERs</p>
                      </div>
                      <div class="col-sm-auto ms-auto">
                        <div class="flex-grow-1">
                          <button
                            class="btn btn-info add-btn"
                            data-bs-toggle="modal"
                            data-bs-target="#createFaqModal"
                          >
                            <i class="ri-add-fill me-1 align-bottom"></i>
                            Add Offer
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card team-box">
                  <div class="card-body">
                    <div>
                      <div class="table-responsive">
                        <table
                          class="table align-middle table-nowrap mb-0 fs-13"
                          id="customerTable"
                        >
                          <thead class="table-secondary">
                            <tr>
                              <th width="5%">SR NO.</th>
                              <th width="10%">OFFER</th>
                              <th>STATUS</th>
                              <th style="text-align: center">ACTION</th>
                            </tr>
                          </thead>
                          <tbody class="list form-check-all">
                            <% faqs.forEach((faq, index)=> { %>
                            <tr>
                              <td>
                                <p class="text-muted mb-0"><%= ++index %></p>
                              </td>
                              <td>
                                <p class="text-muted mb-0"><%= faq.offer %></p>
                              </td>
                              <td>
                                <% if(faq.status){ %>
                                <p class="mb-0 fs-12 badge badge-soft-success">
                                  Enabled
                                </p>
                                <% } else { %>
                                <p class="mb-0 fs-12 badge badge-soft-danger">
                                  Disabled
                                </p>
                                <% } %>
                              </td>
                              <td align="center">
                                <ul class="list-inline mb-0">
                                  <% if (faq.status) { %>
                                  <li
                                    class="list-inline-item edit"
                                    data-bs-toggle="tooltip"
                                    data-bs-trigger="hover"
                                    data-bs-placement="top"
                                    title="Disable"
                                  >
                                    <a
                                      href="/admin/offer-status/<%= faq.id %>/0"
                                      class="text-muted d-inline-block"
                                    >
                                      <lord-icon
                                        src="https://cdn.lordicon.com/vfzqittk.json"
                                        trigger="loop"
                                        style="width: 20px; height: 20px"
                                      >
                                      </lord-icon>
                                    </a>
                                  </li>
                                  <% } else { %>
                                  <li
                                    class="list-inline-item"
                                    data-bs-toggle="tooltip"
                                    data-bs-trigger="hover"
                                    data-bs-placement="top"
                                    title="Enable"
                                  >
                                    <a
                                      class="edit-item-btn"
                                      href="/admin/offer-status/<%= faq.id %>/1"
                                    >
                                      <lord-icon
                                        src="https://cdn.lordicon.com/hjeefwhm.json"
                                        trigger="loop"
                                        style="width: 20px; height: 20px"
                                      >
                                      </lord-icon>
                                    </a>
                                  </li>
                                  <% } %>
                                  <li
                                    class="list-inline-item"
                                    data-bs-toggle="tooltip"
                                    data-bs-trigger="hover"
                                    data-bs-placement="top"
                                    title="Edit"
                                  >
                                    <a
                                      class="remove-item-btn edit-offer-btn"
                                      href="javascript:;"
                                      data-bs-toggle="modal"
                                      data-bs-target="#editFaqModal"
                                      data-offer="<%= faq.offer %>"
                                      data-id="<%= faq.id %>"
                                    >
                                      <lord-icon
                                        src="https://cdn.lordicon.com/oclwxpmm.json"
                                        trigger="loop"
                                        style="width: 20px; height: 20px"
                                      >
                                      </lord-icon>
                                    </a>
                                  </li>
                                  <li
                                    class="list-inline-item"
                                    data-bs-toggle="tooltip"
                                    data-bs-trigger="hover"
                                    data-bs-placement="top"
                                    title="Delete"
                                  >
                                    <a
                                      class="remove-item-btn"
                                      data-bs-toggle="modal"
                                      href="javascript:;"
                                      data-url="/admin/offer/delete/<%= faq.id %>"
                                      onclick="handleDelete(this)"
                                    >
                                      <lord-icon
                                        src="https://cdn.lordicon.com/dovoajyj.json"
                                        trigger="loop"
                                        style="width: 20px; height: 20px"
                                      >
                                      </lord-icon>
                                    </a>
                                  </li>
                                </ul>
                              </td>
                            </tr>
                            <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <%- include('../../components/admin/partials/pagination');
                    %>
                  </div>
                </div>
              </div>
            </div>
            <!--end add modal-->
            <!--end card-->
          </div>
          <!--end col-->
        </div>
      </div>
      <!--end modal-->
    </div>
    <!-- container-fluid -->
  </div>
  <!-- End Page-content -->
</div>
<div
  class="modal fade"
  id="createFaqModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" style="max-width: 802px">
    <div class="modal-content border-0">
      <div class="modal-header bg-soft-info p-3">
        <h5 class="modal-title" id="exampleModalLabel">Add OFFER</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="close-modal"
        ></button>
      </div>
      <form class="checkout-tab create-offer-form">
        <!--end modal-body-->
        <div class="modal-body">
          <div class="row g-3">
            <!-- <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">OFFER</label>
                <input
                  type="text"
                  class="form-control"
                  id="offer"
                  placeholder="Enter "
                  name="offer"
                  maxlength="255"
                />
              </div>
            </div> -->

            <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">OFFER</label>
                <textarea
                  name="offer"
                  id="offer"
                  maxlength="255"
                  class="form-control"
                  placeholder="enter"
                ></textarea>
              </div>
            </div>
            
            <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">OFFER PHOTO</label>
                <br>
                <input type="file" name="photo" id="photo" accept=".png,.jpg,.jpeg">
              </div>
            </div>

            <div class="col-lg-12">
              <div class="d-flex align-items-start gap-3 mt-3">
                <button
                  type="submit"
                  class="btn btn-primary btn-label right ms-auto nexttab"
                  data-nexttab="pills-bill-address-tab"
                >
                  <i
                    class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"
                  ></i>
                  Save
                </button>
              </div>
            </div>
            <!--end col-->
          </div>
        </div>
        <!--end modal-body-->
      </form>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="editFaqModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" style="max-width: 802px">
    <div class="modal-content border-0">
      <div class="modal-header bg-soft-info p-3">
        <h5 class="modal-title" id="exampleModalLabel">Edit OFFER</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="close-modal"
        ></button>
      </div>
      <form class="checkout-tab edit-offer-form">
        <!--end modal-body-->
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">OFFER</label>
                <textarea
                  name="offer"
                  id="offer"
                  maxlength="255"
                  class="form-control offer-offer"
                  placeholder="enter"
                ></textarea>
              </div>
            </div>

            <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">CURRENT PHOTO</label>
                <br>
                <img src="/uploads/<%= faqs?.[0]?.photo %>" style="max-height: 40px;" alt="offer" />
              </div>
            </div>

            <div class="col-lg-12">
              <div>
                <label for="offer" class="form-label">EDIT PHOTO</label>
                <br>
                <input type="file" name="photo" id="photo" accept=".png,.jpg,.jpeg">
              </div>
            </div>

            <div class="col-lg-12">
              <div class="d-flex align-items-start gap-3 mt-3">
                <button
                  type="submit"
                  class="btn btn-primary btn-label right ms-auto nexttab"
                  data-nexttab="pills-bill-address-tab"
                >
                  <i
                    class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"
                  ></i>
                  Save
                </button>
              </div>
            </div>
            <!--end col-->
          </div>
        </div>
        <!--end modal-body-->
      </form>
    </div>
  </div>
</div>
<script type="module" src="/javascripts/admin/offer.js"></script>
<%- include('../partials/footer'); %>
